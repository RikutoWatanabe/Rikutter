.navbar.navbar-default
	.container
		.navbar-header
			= link_to '#Rikutter', root_url, class: "navbar-brand"
		- if logged_in?
			%ul.nav.navbar-nav
				%li= link_to "タイムライン", tweets_path
				%li= link_to "User List", users_path
			%ul.nav.navbar-nav.navbar-right
				%li= link_to "@"+current_user.name, current_user
				%li= link_to "Setting", edit_setting_path(current_user)
				%li= link_to "ログアウト", session_path(current_user), method: :delete, data:{confirm: "本当にログアウトしますか？"} 
		- else
			%ul.nav.navbar-nav.navbar-right
				%li= link_to "Sign up", new_registration_path
				%li= link_to "Login", new_session_path